<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateDeleteController">
   <children>
      <AnchorPane prefHeight="552.0" prefWidth="600.0" style="-fx-background-color: black;">
         <children>
            <Label layoutX="21.0" layoutY="14.0" prefHeight="32.0" prefWidth="229.0" text="Select Exam" textFill="#38d750">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="cbox_exams" layoutX="254.0" layoutY="14.0" onAction="#cbox_onAction_selectExam" prefHeight="32.0" prefWidth="323.0" style="-fx-background-color: white;" />
            <TableView fx:id="tableview_editedDetails" layoutX="21.0" layoutY="71.0" onMouseClicked="#table_onClicked_selectDetails" prefHeight="242.0" prefWidth="558.0">
              <columns>
                <TableColumn fx:id="column_regNo" prefWidth="138.0" text="Registration Number" />
                <TableColumn fx:id="column_name" prefWidth="108.0" text="Name" />
                  <TableColumn fx:id="column_subjectMarks" prefWidth="311.0" text="Subjects Marks" />
              </columns>
            </TableView>
            <Label layoutX="21.0" layoutY="408.0" prefHeight="32.0" prefWidth="183.0" text="Name" textFill="#38d750">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="21.0" layoutY="365.0" prefHeight="32.0" prefWidth="183.0" text="Register number" textFill="#38d750">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="label_subjectMarks" layoutX="21.0" layoutY="452.0" prefHeight="32.0" prefWidth="183.0" text="Marks For Subject" textFill="#38d750">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txt_regNo" layoutX="221.0" layoutY="369.0" prefHeight="32.0" prefWidth="356.0" />
            <TextField fx:id="txt_name" layoutX="221.0" layoutY="412.0" prefHeight="32.0" prefWidth="356.0" />
            <TextField fx:id="txt_subjectMarks" layoutX="221.0" layoutY="452.0" prefHeight="32.0" prefWidth="183.0" />
            <Button fx:id="btn_addMarks" layoutX="416.0" layoutY="452.0" mnemonicParsing="false" onAction="#btn_onAction_addMarks" prefHeight="32.0" prefWidth="159.0" style="-fx-background-color: #38d750; -fx-background-radius: 10px;" text="Add Marks">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="btn_delete" layoutX="193.0" layoutY="498.0" mnemonicParsing="false" onAction="#btn_onAction_delete" prefHeight="40.0" prefWidth="183.0" style="-fx-background-color: #38d750; -fx-background-radius: 10px;" text="Delete Selected Details">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="btn_save" layoutX="399.0" layoutY="498.0" mnemonicParsing="false" onAction="#btn_onAction_save" prefHeight="40.0" prefWidth="183.0" style="-fx-background-color: #38d750; -fx-background-radius: 10px;" text="Save Edited Details">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <RadioButton fx:id="radio_editSelected" layoutX="37.0" layoutY="331.0" mnemonicParsing="false" onMouseClicked="#onMouseClick_savePreference" prefHeight="24.0" prefWidth="248.0" text="Edit as Selected Student Details" textFill="#38d750">
               <font>
                  <Font size="14.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="user_preference" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radio_addNew" layoutX="334.0" layoutY="331.0" mnemonicParsing="false" onMouseClicked="#onMouseClick_savePreference" prefHeight="24.0" prefWidth="229.0" text="Add as new Student Details" textFill="#38d750" toggleGroup="$user_preference">
               <font>
                  <Font size="14.0" />
               </font>
            </RadioButton>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
